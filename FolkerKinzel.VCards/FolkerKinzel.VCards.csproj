<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net40</TargetFrameworks>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <NeutralLanguage>en</NeutralLanguage>


    <FileVersion>1.4.3.1</FileVersion>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>

    <!-- .nuget-Package: -->
    <PackageId>FolkerKinzel.VCards</PackageId>
    <Product>FolkerKinzel.VCards</Product>
    <Version>1.0.0</Version>

    <PackageTags>vcard vcf</PackageTags>
    <Description>
      Classes to read and write vcf-Files that match the vCard-Standards
      2.1, 3.0 and 4.0.
    </Description>


    <Authors>Folker Kinzel</Authors>
    <Copyright>Copyright Â© 2020 Folker Kinzel</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageIcon>Logo.png</PackageIcon>
  </PropertyGroup>

  
  <!-- ðŸ‘‡ disable the nullable warnings when compiling for .NET 4.0 -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net40'">
    <NoWarn>$(NoWarn);8600;8601;8602;8603;8604</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="Intls\Enums\**" />
    <EmbeddedResource Remove="Intls\Enums\**" />
    <None Remove="Intls\Enums\**" />
    <None Include="..\..\..\Nuget-Logo\Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  
  <ItemGroup>
    <Compile Remove="Intls\Encodings\QuotedPrintable\EncodingPreference.cs" />
    <Compile Remove="Intls\Encodings\QuotedPrintable\TrimBehavior.cs" />
    <Compile Remove="Intls\Extensions\EnumExtensions.cs" />
    <Compile Remove="Intls\MimeType.cs" />
    <Compile Remove="Intls\Serializers\VcfSerializationInfo.cs" />
    <Compile Remove="Models\DateTimePropertyConverter.cs" />
    <Compile Remove="Models\Helpers\FlagsEnumExtensions.cs" />
    <Compile Remove="VcfOption.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="LICENSE.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Nullable" Version="1.2.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Res.de.resx">
      <Generator></Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Res.resx">
      <Generator></Generator>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == Release copy /v /b /y &quot;$(OutDir)$(ProjectName).xml&quot; &quot;$(OutDir)de/$(ProjectName).xml&quot;" />
  </Target>

</Project>
